<?xml version="1.0" encoding="UTF-8"?>
<Response>
	<id>4</id>
	<name>Manage Bookings</name>
	<title_of_page>Manage Bookings</title_of_page>
	<caption_of_button>Bookings</caption_of_button>
	<title_of_table>Itinerary ID, Customer Name,Email, Hotel Name, Booking Status</title_of_table>
	<table_name>twc_booking</table_name>
	<parent_id>1</parent_id>
	<manage_page_field_list>id,itineraryId,user_name,user_email,hotelName,booking_status,published, date_time, status_deleted, sort_order</manage_page_field_list>
	<sort_order_displayed>sort_order</sort_order_displayed>
	<exclude_sort_order></exclude_sort_order>
	<exclude_publish></exclude_publish>  
	<img_displayed></img_displayed>
    <small_img_folder_path>hotel_images/</small_img_folder_path>

  <forms_twc>
    <fields
		fieldset="Start"
		caption="Booking Details"
		name="fieldset" aligns="left" />
		
	<fields
		display_this_on_form="Y"
		event_on_form="Y"
		name="itineraryId"
		type="text"
		datatype="text"
		label="itineraryId"
		validation="Y"
		class="span12"
		validation_description="This is my new text for the Title of Page, You can find it while you edit this page conent." />
	
    <fields
		display_this_on_form="N"
		event_on_form="Y"
		name="user_name"
		type="text"
		datatype="text"
		label="user_name"
		validation="Y"
		class="span12"
		validation_description="This is my new text for the Title of Page, You can find it while you edit this page conent." />	
		
	<fields
		display_this_on_form="Y"
		name="hotelName"
		rich_text_enable="Y"
		cols="30" 
		rows="20"
		type="textarea"
		datatype="text"
		label="hotelName"
		validation="N"
		class="wysiwg_full"
		validation_description="This is my new text for the Page Content of Page." />
	
   
	<fields
		fieldset="End"
		caption="Page Details"
		name="fieldset" />	
	<fields
		fieldset="Start"
		caption="Positioning and Other Details"
		name="fieldset" aligns="right" />	
    <fields
		display_this_on_form="Y"
		name="published"
		type="radio"
		datatype="text"
		label="Published"
		validation="Y"
		class=""
		validation_description="Check on if you want to Publish this Page">
      <options value="Yes" checked="true">Yes</options>
      <options value="No">No</options>
    </fields>
	
    <fields
		display_this_on_form="N"
		name="sort_order"
		type="hidden"
		datatype="int"
		label="Sorting Order"
		validation="Y"
		class="span12"
		validation_description="Please Enter the Number (Sorting Order)." />
	<fields
		fieldset="End"
		caption="Manage Meta Informations"
		name="fieldset" />

  </forms_twc>
</Response>